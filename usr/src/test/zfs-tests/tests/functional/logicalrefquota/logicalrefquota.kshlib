. $STF_SUITE/tests/functional/logicalrefquota/logicalrefquota.cfg

# BLOCK_SIZE, logicalrefquota_VALUE and TOLERANCE set in logicalrefquota.cfg
readonly EDQUOT=49

#
# Function to fill a file of the size of the
# logicalrefquota of a zfs filesystem, minus 1
#
function fill_file
{
	typeset FILE="$1"
	typeset -i size=${2-$LOGICALREFQUOTA_VALUE}

	typeset -i write_size=0
	(( write_size = size / BLOCK_SIZE - 1 ))

	typeset -i zret=0
	file_write -o create -f $FILE -b $BLOCK_SIZE \
		 -c $write_size -d 0
	zret=$?
	return $zret
}
#
# Function to fill the quota of a zfs filesystem
#
# $1 - The File system or container to fill.
# $2 - The mountpoint to use.
#
function fill_logicalrefquota
{
	typeset FILESYSTEM="$1"
	typeset MNTPT="$2"

	log_must zfs set logicalrefquota=$LOGICALREFQUOTA_VALUE $FILESYSTEM

	typeset -i write_size=0
	(( write_size = 2 * LOGICALREFQUOTA_VALUE ))

	typeset -i zret=0
	file_write -o create -f $MNTPT/$TESTFILE1 -b $BLOCK_SIZE \
		 -c $write_size -d 0
	zret=$?
        [[ $zret -ne EDQUOT ]] && \
            log_fail "Returned error code: $zret. Expected: $EDQUOT."

	typeset -i file_size=`$LS -ls $MNTPT/$TESTFILE1 | $AWK '{ print $1 }'`
	typeset -i limit=0
	(( file_size = file_size * 512 ))
	(( limit = LOGICALREFQUOTA_VALUE + TOLERANCE ))
	(( file_size > limit )) && \
	    log_fail "File was created larger than the quota value, aborting!!!"
	return 0
}

#
# Function attempts to write another file in a ZFS filesystem
# that has already filled its quota
#
function exceed_logicalrefquota
{
	typeset FILESYSTEM="$1"
	typeset MNTPT="$2"

	log_must fill_logicalrefquota $FILESYSTEM $MNTPT
	typeset -i write_size=0
        (( write_size = 2 * LOGICALREFQUOTA_VALUE ))
	typeset -i zret=0
	#
	# Writing a file without API to access return code
	#
	log_note "Creating a file in a FS that has already exceeded its quota"
	file_write -o create -f $MNTPT/$TESTFILE2 \
		-b $BLOCK_SIZE -c $write_size -d 0
	zret=$?
	[[ $zret -ne EDQUOT ]] && \
	    log_fail "Returned error code: $zret. Expected: EDQUOT."
	return 0
}
